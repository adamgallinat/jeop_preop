@font-face {
	font-family: 'Gyparody';
	src: url(<%= asset_path 'gyparody_hv.ttf' %>) format('truetype');
}

@font-face {
	font-family: 'Korinna';
	src: url(<%= asset_path 'korinna.ttf' %>) format('truetype');
}

* {
	margin: 								0;
	cursor: 								default;
}

a {
	color: 									rgb(211, 178, 0);
	cursor: 								auto;
	text-shadow: 						2px 2px black;
}
a:visited {
	color: 									rgb(211, 178, 0);
}

body {
	text-align: 						center;
	background-color: 			cornflowerblue;
	font-family: 						Korinna;
	font-weight: 						900;
}

#navbar {
	height: 								50px;
	border-bottom: 					1px solid black;
	background-color: 			#0005CD;
	box-shadow: 						0px 4px 35px 0px rgba(0,0,0,0.75);
	width: 									100vw;
	z-index: 								100;
}

#navbar h1 {
	font-family: 						Gyparody;
	float: 									left;
	margin-left: 						10px;
	color: 									#FFD700;
	text-shadow: 						2px 2px black;
}

#navbar #account-links {
	float: 									right;
	margin-right: 					10px;
	color: 									white;
	text-shadow: 						2px 2px black;
}

#main {
	margin-top: 						20px;
}

#welcome-page h1 {
	color: 									rgb(211, 178, 0);
	text-shadow: 						2px 2px black;
	font-size: 							60px;
	margin-bottom: 					10px;
}

#welcome-page h2 {
	margin-top: 60px;
}

#welcome-page .bold {
	color: 									rgb(211, 178, 0);
	text-shadow: 						2px 2px black;
}

#documentation {
	text-align: 						left;
	width: 									70%;
	margin: 								0 auto;
}

#documentation code {
	background-color: 			lightgrey;
	padding: 								2px;
}

#documentation h3 {
	margin-top: 						20px;
	font-family: 						'Open Sans Condensed';
}

#new-game-link {
	margin-bottom: 					30px;
}

#new-game-link a {
	font-family: 						Gyparody;
	font-size: 							60px;
	color: 									rgb(211, 178, 0);
	text-shadow: 						2px 2px #000000;
	margin-bottom: 					30px;
}

form input {
	width: 									400px;
	height: 								50px;
	font-size: 							40px;
}

form label {
	font-size: 							40px;
}

input:-webkit-autofill {
    -webkit-box-shadow: 	0 0 0 1000px white inset;
}

.button {
	display: 								inline-block;
	width: 									30%;
	border: 								4px solid rgb(211,178,0);
	box-shadow: 						4px 4px black;
	height: 								60px;
	font-size: 							28px;
	background-color: 			#0005CD;
	color: 									rgb(211,178,0);
	font-family: 						'korinna';
}

.field_with_errors input {
	border-color: 					red;
}

#score-graph {
	height: 								500px;
	width: 									1000px;
	padding-left: 					40px;
	padding-right: 					40px;
}

.center {
	position: 							relative;
  top: 										50%;
  transform: 							translateY(-50%);
  -webkit-transform: 			translateY(-50%);
}

#board {
	width: 									90%;
	margin: 								auto;
	height: 								605px;
	font-family: 						'Open Sans Condensed', sans-serif;
}

.category {
	width: 									16.6%;
	border-left: 						4px solid black;
	float: 									left;
	background-color: 			#0005CD;
	box-sizing: 						border-box;
}
.category:last-child {
	border-right: 					4px solid black;
}

.category-name-holder {
	height: 								100px;
	width: 									100%;
	border-top: 						4px solid black;
	font-size: 							26px;
	line-height: 						95%;
}

.category-name {
	width: 									90%;
	margin: 								0 auto;
	color: 									white;
	text-shadow: 						2px 2px black;
}

.clue {
	height: 								100px;
	width: 									100%;
	border-top: 						4px solid black;
	font-size: 							70px;
	color: 									rgb(211, 178, 0);
	text-shadow: 						2px 2px black;
}
.clue:last-child {
	border-bottom: 					4px solid black;
}

.final {
	width: 									16.2%;
	margin: 								3px;
	display: 								inline-block;
	margin: 								auto;
	background-color: 			#0005CD;
	border-left: 						4px solid black;
	border-right: 					4px solid black;
}

.wager-amount {
	width: 									400px;
	height: 								50px;
	font-size: 							40px;
	margin-bottom: 					30px;
}

.wager-button {
	width: 									300px;
	margin: 								0 auto;
	border: 								4px solid rgb(211, 178, 0);
	color: 									rgb(211, 178, 0);
	cursor: 								pointer;
}

.placeholder {
	height: 								100%;
	width: 									100%;
}

#clueModal {
	display: 								none;
	position: 							absolute;
	width: 									90%;
	height: 								630px;
	z-index: 								99;
	background-color: 			#0005CD;
	box-shadow: 						inset 0px 0px 200px #000000;
	font-family: 						'Korinna', serif;
	text-shadow: 						4px 4px black;
	font-size: 							72px;
}

.buzz-light {
	box-sizing: 						border-box;
	position: 							absolute;
	width: 									100%;
	height: 								100%;
	top: 										0px;
	left: 									0px;
	z-index: 								100;
	border: 								30px solid white;
}

.question-holder {
	padding: 								10px;
	width: 									90%;
	margin: 								0 auto;
	color: 									white;
}

.answer-holder {
	padding: 								10px;
	height: 								100%;
	width: 									90%;
	margin: 								0 auto;
	color: 									rgb(211, 178, 0)
}

.solved-buttons {
  position: 							absolute;
  top: 										80%;
  left: 									20%;
  transform: 							translateY(-50%);
  width: 									60%;
  margin: 								auto;
}

.solved-buttons div {
	cursor: 								pointer;
}

.solved-buttons > div {
	display: 								inline-block;
	width: 									30%;
	border: 								4px solid rgb(211,178,0);
	box-shadow: 						4px 4px black;
	height: 								60px;
	font-size: 							28px;
}

.correct {	
	float: 									right;
}

.incorrect {
	float: 									left;
}

.final-score {
	height: 300px;
}


@-webkit-keyframes zoomIn {
  0% {
    opacity: 							0;
    -webkit-transform: 		scale3d(.3, .3, .3);
    transform: 						scale3d(.3, .3, .3);
  }

  50% {
    opacity: 							1;
  }
}

@keyframes zoomIn {
  0% {
    opacity: 							0;
    -webkit-transform: 		scale3d(.3, .3, .3);
    transform: 						scale3d(.3, .3, .3);
  }

  50% {
    opacity: 							1;
  }
}

.zoomIn {
	-webkit-animation-duration: 0.5s;
  animation-duration: 				0.5s;
  -webkit-animation-name: 		zoomIn;
  animation-name: 						zoomIn;
}